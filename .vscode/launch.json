{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start:Dev",
      "skipFiles": ["<node_internals>/**"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:dev"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest:Test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",

      "runtimeArgs": [
        "--inspect-brk",
        "run-script", 
        "test:dev",
        "--runInBand"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
